from pessoa_fisica import PessoaFisica


class ControladorPessoaFisica:
    def __init__ (self):
        self.__pessoas_fisicas = []
        self.__tela_pessoafisica = TelaPessoaFisica()


    def adiciona_pessoa_fisica(self):
        if isinstance(cpf, int):
        cpf_pessoa_f = self.__tela_pessoa_fisica.seleciona_amigo()
        pessoa_fisica = self.pega_dado_pessoa_fisica_por_cpf(cpf_pessoa_f)

        if (pessoa_juridica is None):
            self.__pessoas_fisica.remove(pessoa_fisica)
            self.lista_pessoas_f()
        else:
            self.__tela_pessoa_fisica_.mostra_mensagem("ATENCAO: pessoa juridica já existe!")

    def exclui_pessoa_fisica(self):
    if isinstance(cpf, int):
        cnpj_pessoa_j = self.__tela_pessoa_juridica.seleciona_amigo()
        pessoa_juridica = self.pega_dado_pessoa_juridica_por_cnpj(cnpj_pessoa_j)

        if (pessoa_fisica is not None):
            self.__pessoas_fisica.remove(pessoa_fisica)
            self.lista_pessoas_fisica()
        else:
            self.__tela_pessoa_fisica_.mostra_mensagem("ATENCAO: pessoa não existe!")
