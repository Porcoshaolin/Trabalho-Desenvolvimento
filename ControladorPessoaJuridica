from telapessoajuridica import TelaPessoaJuridica

class ControladorPessoaJuridica:
    def __init__(self, tela: TelaPessoaJuridica):
        if isinstance(tela, TelaPessoaJuridica):
            self.__tela = tela
        self.__pessoas_juridicas = []


    def lista_pessoas_juridicas(self):
        self.__tela_pessoa_fisica.mostra_pessoas_fisicas({"nome: " pessoa_juridica.nome, "cnpj: " pessoa_juridica.cnpj})


    def adiciona_pessoa_juridica(self, cnpj: int):
        if isinstance(cnpj, int):
        cnpj_pessoa_j = self.__tela_pessoa_juridica.seleciona_amigo()
        pessoa_juridica = self.pega_dado_pessoa_juridica_por_cnpj(cnpj_pessoa_j)

        if (pessoa_juridica is None):
            self.__pessoas_juridicas.append(pessoa_juridica)
            self.lista_pessoas_juridicas()
        else:
            self.__tela_pessoa_juridica_.mostra_mensagem("ATENCAO: pessoa juridica não existe!")


    def exclui_pessoa_juridica(self):
       if isinstance(cnpj, int):
        cnpj_pessoa_j = self.__tela_pessoa_juridica.seleciona_amigo()
        pessoa_juridica = self.pega_dado_pessoa_juridica_por_cnpj(cnpj_pessoa_j)

        if (pessoa_juridica is not None):
            self.__pessoas_juridicas.remove(pessoa_juridica)
            self.lista_pessoas_juridicas()
        else:
            self.__tela_pessoa_juridica_.mostra_mensagem("ATENCAO: pessoa juridica já existe!")


