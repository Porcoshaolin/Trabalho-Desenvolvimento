from tipo_movimentacao import TipoMovimentacao
from pessoa import Pessoa
from usuario import Usuario
from tipo_orcamento import TipoOrcamento

class Movimentacao:
  def __init__(self, valor: float, usuario: Usuario, data: date, descricao: str, tipo_movimentacao: TipoMovimentacao, categoria_movimentacao: TipoOrcamento, fornecedor_pagador: Pessoa):
      if isinstance(valor, float) or isinstance(valor, int):
          self.__valor = valor
      if isinstance(usuario, Usuario):
          self.__usuario = usuario
      if isinstance(data, date):
          self.__data = data
      if isinstance(descricao, str):
          self.__descricao = descricao
      if isinstance(tipo_movimentacao, TipoMovimentacao):
          self.__tipo_movimentacao = tipo_movimentacao
      if isinstance(categoria_movimentacao, TipoOrcamento):
          self.__categoria_movimentacao = categoria_movimentacao
      if isinstance(fornecedor_pagador, Pessoa):
          self.__fornecedor_pegador = fornecedor_pagador

      @property
      def valor(self) -> float
          return self.__valor

      @valor.setter
      def valor(self, valor, float):
          if isinstance(valor, float) or isinstance(valor, int):
              self.__valor  = valor

      @property
      def usuario(self) -> Usuario:
          return self.__usuario

      @usuario.setter
      def usuario(self, usuario, Usuario):
          if isinstance(usuario, Usuario):
              self.__usuario = usuario

      @property
      def data(self) -> date:
          return self.__data

      @data.setter
      def data(self, data, date):
          if isinstance(data, date):
              self.__data = data

      @property
      def descricao(self) -> str:
          return self.__descricao

      @descricao.setter
      def descricao(self, descricao, str):
          if isinstance(descricao, str):
              self.__descricao = descricao

      @property
      def tipo_movimentacao(self) -> TipoMovimentacao:
          return self.__tipo_movimentacao

      @tipo_movimentacao.setter
      def tipo_movimentacao(self, tipo_movimentacao, TipoMovimentacao):
          if isinstance(tipo_movimentacao, TipoMovimentacao):
              self.__tipo_movimentacao = TipoMovimentacao

      @property
      def categoria_movimentacao(self) -> CategoriaMovimentacao:
          return self.__categoria_movimentacao

      @categoria_movimentacao.setter
      def categoria_movimentacao(self, categoria_movimentacao, CategoriaMovimentacao):
          if isinstance(categoria_movimentacao, CategoriaMovimentacao):
              self.__categoria_movimentacao = categoria_movimentacao

      @property
      def fornecedor_pagador(self) -> Pessoa:
          return self.__fornecedor_pagador

      @fornecedor_pagador.setter
      def fornecedor_pagador(self, fornecedor_pagador, Pessoa):
          if isinstance(fornecedor_pagador, Pessoa):
              self.__fornecedor_pagador = fornecedor_pagador
